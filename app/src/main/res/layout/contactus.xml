<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8086dc"
        android:padding="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shreedham"
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Naveen Agarwal "
            android:id="@+id/textView4"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Kavita Agarwal"
            android:id="@+id/textView13"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="D-13 B   "
            android:id="@+id/textView5"
            android:paddingTop="10dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mehendru Enclave,"
            android:id="@+id/textView9"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Opposite Model Town 3 Bus Stop,"
            android:id="@+id/textView10"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="(Near Azadpur Metro Station)"
            android:id="@+id/textView11"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Delhi, 110009"
            android:id="@+id/textView12"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Landline: 011-27122451   "
            android:id="@+id/textView6"
            android:paddingTop="10dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone: +91 8882746436, +91 7065665770"
            android:id="@+id/textView7"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email: shreedhamknp@gmail.com"
            android:id="@+id/textView8"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fbimg"
                android:background="@drawable/fbcopy"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mailimg"
                android:background="@drawable/mailimg"
                android:layout_alignTop="@+id/fbimg"
                android:layout_toRightOf="@+id/fbimg"
                android:layout_toEndOf="@+id/fbimg" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/callimg"
                android:background="@drawable/callimg"
                android:layout_alignTop="@+id/mailimg"
                android:layout_toRightOf="@+id/webimg"
                android:layout_toEndOf="@+id/webimg" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/webimg"
                android:background="@drawable/webimg"
                android:layout_alignTop="@+id/callimg"
                android:layout_toRightOf="@+id/mailimg"
                android:layout_toEndOf="@+id/mailimg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fb page"
                android:id="@+id/fbpagetext"
                android:layout_below="@+id/webimg"
                android:layout_alignLeft="@+id/fbimg"
                android:layout_alignStart="@+id/fbimg"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mail"
                android:id="@+id/mailtext"
                android:layout_below="@+id/webimg"
                android:layout_alignLeft="@+id/mailimg"
                android:layout_alignStart="@+id/mailimg"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="website"
                android:id="@+id/webtext"
                android:layout_below="@+id/webimg"
                android:layout_alignLeft="@+id/webimg"
                android:layout_alignStart="@+id/webimg"
                android:layout_marginLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="call us"
                android:id="@+id/calltext"
                android:layout_below="@+id/webimg"
                android:layout_alignLeft="@+id/callimg"
                android:layout_alignStart="@+id/callimg"
                android:layout_marginLeft="18dp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
